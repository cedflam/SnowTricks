{% extends "base.html.twig" %}
{% block title %}Mot de passe oublié !
{% endblock %}

{% block body %}

	<!-- Header -->
	<body class="masthead">
		<div class="container d-flex h-100 align-items-center mb-5">
			<div class="mx-auto">
				<h1 class="mx-auto my-0 text-uppercase text-center">Mot de passe oublié</h1>
				<div class="container mt-3  d-flex justify-content-center text-white ">
					<div class="col-md-8 mb-5">
						<form method="post" class="mt-5">							
							<label for="inputEmail" class="sr-only">Email</label>
							<input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>

							<button class="btn btn-lg btn-primary mt-3" type="submit">
								Evoyer !
							</button>
                        </form>
						</div>
					</div>
				</div>
			</div>
		</body>

	{% endblock %}

