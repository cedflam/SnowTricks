{# ------------Je gère les images ------------- #}

	{% block _figure_images_widget %}
		<p>Ajoutez/Supprimez des images pour la page détaillée de la figure</p>

		{{form_widget(form)}}
		<input type="hidden" id="widgets-counter" value="0">
		<div class="form-group">
			<button type="button" id="add-image" class="btn btn-info">Ajouter une image</button>
		</div>
	{% endblock %}

	{# Je supprime les infos inutiles à l'affichage (id...par ex) #}
	{% block _figure_images_entry_row %}
		{{form_widget(form)}}
	{% endblock %}

	{# J'affiche uniquement les champs que je souhaite et je les mets en forme #}
	{% block _figure_images_entry_widget %}
		<div class="form-group" id="block_{{id}}">
			<div class="row">
				<div class="col-10">

					<div class="row">
						<div class="col">
							{{ form_widget(form.addressImg) }}
                            {{form_errors(form.addressImg)}}
						</div>
					</div>
				</div>
				<div class="col-md-2">
					<button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-sm btn-danger">
						<i class="fas fa-trash"></i>
					</button>
				</div>
			</div>
		</div>
	{% endblock %}


	{# --------------Je gère les vidéos------------- #}

{% block _figure_videos_widget %}
		<p>Ajoutez/Supprimez des vidéos pour la page détaillée de la figure</p>

		{{form_widget(form)}}

		<div class="form-group">
			<button type="button" id="add-video" class="btn btn-info">Ajouter une vidéo</button>
		</div>
	{% endblock %}

	{# Je supprime les infos inutiles à l'affichage (id...par ex) #}
	{% block _figure_videos_entry_row %}
		{{form_widget(form)}}
	{% endblock %}

	{# J'affiche uniquement les champs que je souhaite et je les mets en forme #}
	{% block _figure_videos_entry_widget %}
		<div class="form-group" id="block_{{id}}">
			<div class="row">
				<div class="col-10">

					<div class="row">
						<div class="col">
							{{ form_widget(form.addressVid) }}
                            {{form_errors(form.addressVid)}}
						</div>
					</div>
				</div>
				<div class="col-md-2">
					<button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger btn-sm">
						<i class="fas fa-trash"></i>
					</button>
				</div>
			</div>
		</div>
	{% endblock %}

